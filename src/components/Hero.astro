<section id="inicio" class="relative w-full h-[90vh] flex items-end">
    <div
      class="absolute inset-0 bg-cover bg-center z-0"
      style="background-image: url('./novarub-landing/hero-3.png'); background-position: center center; background-size: cover;"
    >
      <div class="absolute inset-0 bg-[rgb(24,42,59)]/50"></div>
    </div>
  
    <div class="container relative z-10 px-4 md:px-6 pt-32 md:pt-48 pb-16 md:pb-24 mx-auto">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tighter text-white mb-6">
          Soluciones de curado para la industria del neumatico
        </h1>
        <div class="flex flex-wrap gap-4 mt-6">
            <div class="flex items-center space-x-2 bg-background rounded-full px-4 py-2">
              <span class="text-sm font-medium">Bladders</span>
            </div>
          
            <div class="flex items-center space-x-2 bg-background rounded-full px-4 py-2">
              <span class="text-sm font-medium">Envelopes</span>
            </div>
          
            <div class="flex items-center space-x-2 bg-background rounded-full px-4 py-2">
              <span class="text-sm font-medium">Tubos de curado</span>
            </div>
          
            <div class="flex items-center space-x-2 bg-background rounded-full px-4 py-2">
              <span class="text-sm font-medium">Desarrollos a Medida</span>
            </div>
          </div>

        <div class="flex flex-col sm:flex-row gap-4 my-5">
            <a href="#catalogo">
                <button
                  class="inline-flex items-center justify-center gap-2 whitespace-nowrap text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-11 rounded-md px-8 w-full sm:w-auto"
                >
                  <span>Ver Catalogo</span>
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="m9 18 6-6-6-6"/>
                  </svg>
                </button>
            </a>
            <a href="#contacto">
                <button
                  class="inline-flex items-center justify-center gap-2 whitespace-nowrap text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border bg-white/10 text-white border-white/20 hover:bg-white/20 h-11 rounded-md px-8 w-full sm:w-auto"
                >
                  <span>Contactar</span>
                </button>
            </a>                            
        </div>
      </div>
    </div>
</section>  